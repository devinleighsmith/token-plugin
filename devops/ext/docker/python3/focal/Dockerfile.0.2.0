FROM sovrin/base:0.2.0-focal
# TODO LABEL maintainer="Name <email-address>"

RUN add-apt-repository ppa:deadsnakes/ppa
# python
RUN apt-get update && apt-get install -y \
        python3.5 \
        python \ 
        python3-pip \
        python-setuptools \
        && rm -rf /var/lib/apt/lists/*

# pypi based packages
RUN pip3 install -U \ 
        'pip<10.0.0' \
        setuptools==50.3.2 

